<!DOCTYPE html>
<html>
  <head>
    <title>TicketsTracking</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div style="width: 100%; text-align: right; display: block;">
    <% if current_user %>
      <%= link_to 'Home', root_path %> | <%= link_to 'Log Out', logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Enquiries', enquiries_path %> | <%= link_to 'Home', root_path %> | <%= link_to 'Log In', login_path %>
    <% end %>
  </div>
    <% if notice %>
      <%= notice %>
    <% end %>
    <% if alert %>
      <%= alert %>
    <% end %>
    
    <%= yield %>
  </body>
</html>
